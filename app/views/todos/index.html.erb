<div class="container">

    <h1 class="title">Todo App</h1>
    <br/><br/>
    <div class="row">
        <form class="form-inline col-sm-offset-3" action="/todos/create" method="post">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-pencil"></i>
                </span>
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="text" class="form-control" placeholder="todo-item" id="box" style="width: 30vw" name="todo[task]"/>
                </div>
                <input type="date" class="form-date" placeholder="due date" id="box" style="width: 10vw" name="todo[date]"/>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary form-control" value="add" style="width: 10vw"/>
                </div>
            </form>

        </div>
    </div>
